
<form action="/session/create" method="POST" class="form-signin">
  <h2 class="form-signin-heading">Iniciar Sesión</h2>

  <% if(flash && flash.err) { %>
  <ul class="alert alert-success">
    <% Object.keys(flash.err).forEach(function(error) { %>
    <li><%- JSON.stringify(flash.err[error]) %></li>
    <% }) %>
  </ul>
  <% } %>

  <input type="text" class="form-control" placeholder="Correo Electronico" name="email">
  <input type="password" class="form-control" placeholder="Contraseña" name="password">
  <input type="submit" class="btn btn-lg btn-primary btn-block" value="Ingresar"/>
  <input type="hidden" name="_csrf" value="<%= _csrf %>" />

</form>
